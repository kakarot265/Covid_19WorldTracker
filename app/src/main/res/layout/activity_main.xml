<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/color_primary">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"

            android:src="@drawable/ic_covid"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:layout_toStartOf="@+id/virus1"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_covid"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:id="@+id/virus1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_covid"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COVID TRACKER"
                android:textColor="@color/white"
                android:fontFamily="@string/regular"

                />
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:textSize="@dimen/title_size3"
                android:textColor="@color/white"
                android:fontFamily="@string/bold"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:drawablePadding="10dp"


                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated at 3 May 2021"
                android:textSize="@dimen/title_size"
                android:textColor="@color/white"
                android:fontFamily="@string/light"
                android:drawablePadding="10dp"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/yellow" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="5dp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/blue_pie" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="5dp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/green_pie" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recovered"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="5dp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/red_pie" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Death"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="5dp"

                            />


                    </LinearLayout>



                </LinearLayout>

                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="8dp"
                    app:egLegendTextSize="0sp"
                    app:egUsePieRotation="true"
                    app:egLegendHeight="0dp"
                    app:egInnerPaddingColor="@color/color_primary"
                    app:egValueTextSize="0sp"/>



            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            >

            <com.google.android.material.card.MaterialCardView
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/card_width"
                android:layout_columnWeight="1"
                app:strokeColor="@color/black"
                android:padding="7dp"
                android:layout_gravity="center"
                app:strokeWidth="1dp"
                >

                <LinearLayout
                    android:background="@color/black"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/yellow" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="10dp"

                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345"
                        android:layout_marginTop="7dp"
                        android:textSize="@dimen/title_size"
                        android:textColor="@color/white"
                        android:fontFamily="@string/bold"


                        />
                    <TextView
                        android:id="@+id/tconfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+32)"
                        android:layout_marginTop="7dp"
                        android:textSize="@dimen/title_size"
                        android:textColor="@color/white"
                        android:fontFamily="@string/regular"


                        />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="@dimen/card_width"
                android:layout_columnWeight="1"
                app:strokeColor="@color/black"
                android:padding="7dp"
                android:layout_gravity="center"
                app:strokeWidth="1dp"
                >

                <LinearLayout
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/blue_pie" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="10dp"

                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345"
                        android:layout_marginTop="7dp"
                        android:textSize="@dimen/title_size"
                        android:textColor="@color/white"
                        android:fontFamily="@string/bold"


                        />
                    <TextView
                        android:id="@+id/tactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+(32)"
                        android:layout_marginTop="7dp"
                        android:textSize="@dimen/title_size"
                        android:textColor="@color/white"
                        android:fontFamily="@string/regular"


                        />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="@dimen/card_width"
                android:layout_columnWeight="1"
                app:strokeColor="@color/black"
                android:padding="7dp"
                android:layout_gravity="center"
                app:strokeWidth="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_margin="12dp"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/green_pie" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@string/regular"
                            android:text="Recovered"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size"

                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/recovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@string/bold"
                        android:text="12345"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_size"


                        />

                    <TextView
                        android:id="@+id/trecovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@string/regular"
                        android:text="(+32)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_size"


                        />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:padding="7dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/red_pie" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@string/regular"
                            android:text="Deaths"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size"

                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/death"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@string/bold"
                        android:text="12345"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_size"


                        />

                    <TextView
                        android:id="@+id/tdeath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@string/regular"
                        android:text="(+32)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_size"


                        />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="@dimen/card_width"
                android:layout_columnWeight="1"
                app:strokeColor="@color/white"
                android:padding="7dp"
                android:layout_gravity="center"
                app:strokeWidth="1dp"
                >

                <LinearLayout
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="@color/orange" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tests"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/white"
                            android:fontFamily="@string/regular"
                            android:layout_marginStart="10dp"

                            />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345"
                        android:layout_marginTop="7dp"
                        android:textSize="@dimen/title_size"
                        android:textColor="@color/white"
                        android:fontFamily="@string/bold"


                        />
                    <TextView
                        android:id="@+id/ttest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+(32)"
                        android:layout_marginTop="7dp"
                        android:textSize="@dimen/title_size"
                        android:textColor="@color/white"
                        android:fontFamily="@string/regular"


                        />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>







        </GridLayout>
    </androidx.core.widget.NestedScrollView>











</LinearLayout>